{
  "manifest_version": 3,
  "name": "de-slexia",
  "version": "1.0",
  "description": "Customize the font size, text color, and background of any webpage.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>", "*://*.google.com/*"],
  "action": {
    "default_title": "Style the page",
    "default_popup": "popup.html",
    "default_icon": {
      "128": "deslexia.png"
    }
  }
}
